<section class="hero flex py-16">
  <div class="flex items-center justify-between">
    <div class="mx-20 w-1/2">
      <h6 class="text-lg capitalize">
        <em>Are you looking for best restaurant?</em>
      </h6>
      <h1 class="text-6xl font-bold capitalize pt-4 mb-4">Don't wait</h1>
      <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-8">Order now</button>
    </div>
    <div class="mx-20 w-1/2">
      <img src="/image/hero-pizza.png" alt="" />
    </div>
  </div>
</section>

<section class="menu container mx-auto py-8">
  <h2 class="text-xl font-bold mb-20 ml-20">All Foods</h2>
  <div class="grid grid-cols-4 gap-y-10 ml-20">
    <% pizza.forEach((pizza) => { %>
      <div class="w-64">
        <div>
          <img class="h-40 mb-4 mx-auto" src="/image/<%= pizza.image %>" alt="" />
          <div class="text-center">
            <h2 class="capitalize mb-4 text-lg"><%= pizza.name %></h2>
            <span class="size uppercase py-1 px-4 rounded-full text-xs"
              ><%= pizza.size %></span
            >
            <div class="flex items-center justify-around mt-6">
              <span class="font-bold text-lg"><%= pizza.price %>$</span>
        <button data-pizza="<%= JSON.stringify(pizza) %>"
                class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold"
              >
                <span>+</span>
                <span class="ml-3">Add</span>
              </button>
            </div>
          </div>
        </div>
      </div>
   <% }) %>
    <div>
      <img class="h-40 mb-4 mx-auto" src="/image/pizza.png" alt="" />
      <div class="text-center">
        <h2 class="capitalize mb-4 text-lg">mottoPizz</h2>
        <span class="size uppercase py-1 px-4 rounded-full text-xs"
          >small</span
        >
        <div class="flex items-center justify-around mt-6">
          <span class="font-bold text-lg">250$</span>
          <button
            class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold"
          >
            <span>+</span>
            <span class="ml-3">Add</span>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
</section>