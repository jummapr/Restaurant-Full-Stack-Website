<section class="login pt-24 h-300">
  <!-- component -->
  <div class="relative py-3 sm:max-w-xl sm:mx-auto">
    <div
      class="absolute inset-0 bg-gradient-to-r from-orange-500 to-orange-500 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl"
    ></div>
    <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
      <div class="max-w-md mx-auto w-100">
        <div>
          <h1 class="text-2xl font-semibold">Create Account</h1>
        </div>
        <div class="divide-y divide-gray-200">
          <form action="/register" method="POST">
            <% if(messages.error) {%>
            <span class="text-red-500 text-sm"><%= messages.error %></span>
            <% } %>
            <div
              class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7"
            >
              <div class="relative">
                <input
                  autocomplete="off"
                  id="name"
				  value="<%= messages.name %>"
                  name="name"
                  type="text"
                  class="peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600 cursor-pointer"
                  placeholder="Enter Your Name"
                />
                <label
                  for="name"
                  class="absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm"
                  >Enter Your Name</label
                >
              </div>
              <div class="relative">
                <input
                  autocomplete="off"
                  id="email"
                  name="email"
				  value="<%= messages.email %>"
                  type="email"
                  class="peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600 cursor-pointer"
                  placeholder="Email address"
                />
                <label
                  for="email"
                  class="absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm"
                  >Email Address</label
                >
              </div>
              <div class="relative">
                <input
                  autocomplete="off"
                  id="password"
                  name="password"
                  type="password"
                  class="peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600 cursor-pointer"
                  placeholder="Password"
                />
                <label
                  for="password"
                  class="absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm"
                  >Password</label
                >
              </div>
              <div class="flex items-center">
                <button
                  type="submit"
                  class="btn-primary bg-orange-500 text-white mt-5 rounded-full px-4 py-2"
                >
                  Register
                </button>
                <h3 class="pt-6 ml-20 capitalize">
                  already have account?
                  <a href="/login" class="font-bold capitalize text-orange-500"
                    >login</a
                  >
                </h3>
              </div>
              <div class="text-right"></div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
